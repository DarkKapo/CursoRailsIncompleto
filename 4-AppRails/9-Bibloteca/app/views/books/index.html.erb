<p id="notice"><%= notice %></p>

<h1>Books</h1>

<div class="row my-5">
  <div class="col-md-3">
    <%= search_form_for @q do |f| %>

      <%= f.label :state_eq, "Estado" %>
      <%= f.select :state_eq, options_for_select(Book.states, @q.state_eq), {}, {class: "form-control"} %>
      
      <%= f.submit "search",  class:"btn btn-outline-primary"  %>
    <% end %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :titulo) %></th>
      <th>Autor</th>
      <th>State</th>
      <th>Borrowed at</th>
      <th>Return at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.titulo %></td>
        <td><%= book.autor %></td>
        <td><%= book.state %></td>
        <td><%= book.borrowed_at %></td>
        <td><%= book.return_at %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @books %>

<br>

<%= link_to 'New Book', new_book_path %>
